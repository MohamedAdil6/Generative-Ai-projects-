# âœ… Step 2: Import libraries
import google.generativeai as genai

# âœ… Step 3: Set API Key directly (only for private use)
GEMINI_API_KEY = "AIzaSyCPNJcJxV_A2gWBB2z3DDL71TZTqmJ9jsw"

# âœ… Step 4: Configure the API
genai.configure(api_key=GEMINI_API_KEY)

# âœ… Step 5: Load the Gemini model
model = genai.GenerativeModel('gemini-1.5-flash')

# âœ… Step 6: Define a function to generate responses
def generate_response(prompt):
    try:
        response = model.generate_content(prompt)
        return response.text.strip()
    except Exception as e:
        return f"âš ï¸ Error: {e}"

# âœ… Step 7: Define chatbot loop
def chatbot():
    print("ğŸ¤– Gemini Chatbot is ready! Type 'exit' to quit.\n")
    while True:
        user_input = input("You: ")
        if user_input.strip().lower() == "exit":
            print("ğŸ‘‹ Chat ended.")
            break
        reply = generate_response(user_input)
        print(f"Bot: {reply}\n")

# âœ… Step 8: Start the chatbot
chatbot()
